{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "legacyDecorators": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      },
      "babel-module": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "alias": {
          "src": "./src"
        }
      }
    }
  },
  "plugins": [
    "react"
  ],
  "env": {
    "jest": true
  },
  "rules": {
    "max-len": ["error", { "code": 200, "ignoreComments": true }],
    "react/forbid-prop-types": ["error", { "forbid": ["object"], "checkContextTypes": true, "checkChildContextTypes": true }],
    "react/destructuring-assignment": ["warn", "always", { "ignoreClassFields": true }],
    "react/prop-types": ["off"],
    "react/no-array-index-key": ["warn"],
    "react/self-closing-comp": ["warn", {
      "component": true,
      "html": true
    }],
    "react/no-unused-prop-types": ["warn"],
    "react/jsx-handler-names": ["error"],
    "react/jsx-filename-extension": ["off"],
    "react/prefer-stateless-function": ["warn"],
    "react/require-default-props": ["off"],
    "react/jsx-indent": ["error", 4],
    "react/jsx-indent-props": "off",
    "comma-dangle": ["off"],
    "quote-props:": ["off", "consistent-as-needed"],
    "no-use-before-define": ["off"],
    "no-nested-ternary": ["warn"],
    "arrow-parens": ["error", "as-needed"],
    "object-curly-newline": ["off", {
      "ObjectExpression": { "multiline": true, "minProperties": 8},
      "ObjectPattern": { "multiline": true, "minProperties": 8 },
      "ImportDeclaration": { "multiline": true, "minProperties": 5 },
      "ExportDeclaration": { "multiline": true, "minProperties": 5 }
      }
    ],
    "arrow-body-style": ["warn", "as-needed", { "requireReturnForObjectLiteral": false }],
    "prefer-const": ["error", {
      "destructuring": "all",
      "ignoreReadBeforeAssign": true
    }],
    "import/prefer-default-export": ["off"],
    "no-shadow": ["off"],
    "no-plusplus": ["off"],
    "class-methods-use-this": "off",
    "func-names": ["off"],
    "no-console": "off",
    "no-param-reassign": "off",
    "implicit-arrow-linebreak": "off",
    "function-paren-newline": "off",
    "indent": ["error", 4],
    "quote-props": ["error", "as-needed"],
    "array-bracket-spacing": ["error", "always"],
    "react/jsx-one-expression-per-line": "off",
    "prefer-template": "off",
    "jsx-a11y/no-autofocus": "off",
    "no-underscore-dangle": "off",
    "max-classes-per-file": ["error", 4],
    // https://github.com/typescript-eslint/typescript-eslint/issues/342
    "no-undef": "off",
    "no-unused-vars": "off"
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb"
  ]
}
